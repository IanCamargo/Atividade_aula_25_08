#include <stdio.h>

//Atividade Realizado em Sala de Aula. Na atividade o programa recebe o nome do usuário e um número que o mesmo digitar e depois mostra o nome e o número escolhido pelo usuário.

int main(void) {

  int numero;
  char nome[10];

  printf("Informe um Número: ");
  scanf("%d",&numero);

  printf("Qual seu nome? ");
  scanf("%s",&nome);

  printf("Seu nome é %s e o numero escolhido foi %d",nome,numero);

}
